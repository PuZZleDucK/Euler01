<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	

	<TextView 
		android:text="This is my programmatic solution to the Euler challenge 1. Select two numbers to pick out and a total number count.\n The sum of all numbers from 1 to 1-less-than-count which hase one of the selected numbers as a factor are summed and displayed at the bottom."
		android:gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	
	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		

		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			
			<Button 
				android:id="@+id/inca" 
				android:text="Inc +"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
				
			<TextView 
				android:id="@+id/a" 
				android:text="3"
				android:gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
				
			<Button 
				android:id="@+id/deca"
				android:text="Dec -"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
				
		</LinearLayout>
		
		
		


		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical" >

			<Button 
				android:id="@+id/incb" 
				android:text="Inc +"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

			<TextView 
				android:id="@+id/b" 
				android:text="5"
				android:gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

			<Button 
				android:id="@+id/decb" 
				android:text="Dec -"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />

		</LinearLayout>

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    android:orientation="vertical" >

			<TextView 
				android:text="Count:"
				android:gravity="center"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent" />
			
			
		<EditText 
			android:id="@+id/count" 
			android:inputType="number"
			android:text="1000"
			android:gravity="center"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent" />
		</LinearLayout>
		
		<Button
		    android:id="@+id/compute"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_vertical"
		    android:text="Compute" />
		
		<!-- No nps until droid 3
	<NumberPicker
		android:id="@+id/numbera"  
		android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
	
	<NumberPicker
		android:id="@+id/numberb"  
		android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
		-->
		
	</LinearLayout>
	


	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical" >
		

		<EditText
		    android:typeface="monospace"
			android:text="[[ The numbers from 1 to the selected number will appear here when compute is activated. ]]" 
			android:background="@null"
			android:editable="false"
			android:cursorVisible="false"
			android:id="@+id/displaytext"
			android:layout_weight="2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		

		
		<TextView
			android:id="@+id/result" 
			android:text="Grand total:      " 
			android:layout_gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />



	</LinearLayout>



	
	
</LinearLayout>
